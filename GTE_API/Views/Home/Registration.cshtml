@model GTE_BL.Entities.Registration
@{
    ViewBag.Title = "Registration";
    string warningMessage = "Please do not use spaces or the special characters in the company name";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<img src="~/images/gtelogo.png" alt="" width="175px" height="100px"/>
<h2>QQ Catalyst - Global Telecom Integration</h2>

<div id="registration">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true);


        <div class="row">
            @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control", @placeholder = "Company Name", @title=warningMessage, maxlength="255", onkeypress="return blockSpecialChar(event)" })
            @Html.ValidationMessageFor(model => model.CompanyName)
        </div>
        <div class="row">
            @Html.TextBoxFor(model => model.APIUserName, new { @class = "form-control", @placeholder = "QQSolution UserName" })
            @Html.ValidationMessageFor(model => model.APIUserName)
        </div>
        <div class="row">
            @Html.EditorFor(model => model.APIPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "QQSolution Password" } })
            @Html.ValidationMessageFor(model => model.APIPassword)
        </div>
        <div class="button_row">
            <input type="image" src="~/images/register-button_0.jpg" alt="Subscribe" width="125" height="40" />
        </div>
    }
</div>

